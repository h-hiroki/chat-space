
=   render partial: "layouts/sidebar"

.contents
  .contents__header
    .contents__header__infomation
      %p.contents__header__infomation-name #{@group.name}
      %p.contents__header__infomation-member-name
        MEMBER:
        - @group.users.each do |user|
          #{user.name}

    .contents__header__edit
      =link_to "edit", edit_group_path(@group.id), class: "contents__header__edit-btn"

  = render partial: 'message_content'

  .contents__footer
    .contents__footer__form
      = form_for [@group, @message], html: {class: 'contents__footer__form'} do |f|
        = f.text_field :body, placeholder: "type a message", id: "contents__footer__form"
        = f.label :image, class: "contents__footer__btn__input" do
          %i{"class":"fa fa-picture-o", "aria-hidden": "true"}
          = f.file_field :image, class: "contents__footer__btn__input-field"
        = f.button "Send",class: 'contents__footer__btn__send'
